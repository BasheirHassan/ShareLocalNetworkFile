# متغيرات البيئة لتخصيص عنوان التطبيق
BASE_URL=192.168.0.8
PORT=3006
NETWORK_INTERFACE=eth0

# إعدادات تنظيف الملفات القديمة
# عمر الملف بالساعات قبل الحذف (افتراضي: 24 ساعة)
MAX_FILE_AGE_HOURS=24

# تفعيل الحذف التلقائي عند بدء التطبيق (true/false)
AUTO_CLEANUP_ON_START=false

# تفعيل الحذف التلقائي الدوري (true/false)
ENABLE_PERIODIC_CLEANUP=true

# فترة الحذف الدوري بالساعات (افتراضي: كل 6 ساعات)
CLEANUP_INTERVAL_HOURS=24

# يمكنك تغيير BASE_URL إلى أي عنوان تريده
# يمكنك تغيير PORT إلى أي منفذ تريده
# NETWORK_INTERFACE يمكن تغييره لاختيار واجهة الشبكة المطلوبة
APP_NAME='Share Local Network File'